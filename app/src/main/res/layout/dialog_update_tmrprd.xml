<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/DIA_UP_TMEPR_L_Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:text="@string/L_Code"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DIA_UP_TMEPR_L_Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/L_Description"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/DIA_UP_TMEPR_L_Code"
        app:layout_constraintTop_toBottomOf="@+id/DIA_UP_TMEPR_L_Code" />

    <EditText
        android:id="@+id/DIA_UP_TMEPR_V_Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:hint="@string/L_Code"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/DIA_UP_TMEPR_L_Code"
        app:layout_constraintStart_toEndOf="@+id/DIA_UP_TMEPR_L_Code"
        app:layout_constraintTop_toTopOf="@+id/DIA_UP_TMEPR_L_Code"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/DIA_UP_TMEPR_V_Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:hint="@string/L_Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/DIA_UP_TMEPR_L_Desc"
        app:layout_constraintStart_toEndOf="@+id/DIA_UP_TMEPR_L_Desc"
        app:layout_constraintTop_toTopOf="@+id/DIA_UP_TMEPR_L_Desc"
        android:importantForAutofill="no" />


</androidx.constraintlayout.widget.ConstraintLayout>